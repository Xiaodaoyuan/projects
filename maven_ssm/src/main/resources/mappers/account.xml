<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xiaody.application.dao.AccountMapper">
	<insert id="create" parameterType="Account">
		insert into account (
		   userName,password,nickName,mobile,email,gender,photo,
		   birthDate,lastLoginTime,createTime,updateTime,userType)
		values (
		  #{Account.userName},#{Account.password},#{Account.nickName},
		  #{Account.mobile},#{Account.email},#{Account.gender},
          #{Account.photo},#{Account.birthDate},#{Account.lastLoginTime},
		  #{Account.createTime},#{Account.updateTime},#{Account.userType},
		  )
	</insert>
	
	<delete id="delete">
       delete from account where id = #{id}
    </delete>
	
	<select id="get" resultType="Account">
	   select *from account where id = #{id}
	</select>
</mapper>