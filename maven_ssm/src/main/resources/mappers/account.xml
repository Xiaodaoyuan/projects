<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xiaody.application.dao.AccountMapper">
	<insert id="create" parameterType="account"  useGeneratedKeys="true"
            keyProperty="account.id" keyColumn="id">
		insert into account (
		userName,password,nickName,mobile,email,gender,photo,
		birthDate,lastLoginTime,userType)
		values (
		#{account.userName},#{account.password},#{account.nickName},
		#{account.mobile},#{account.email},#{account.gender},
		#{account.photo},#{account.birthDate},#{account.lastLoginTime},
		#{account.userType}
		)
	</insert>

	<delete id="delete">
		delete from account where id = #{id}
	</delete>

	<select id="get" resultType="Account">
		select *from account where id =
		#{id}
	</select>
</mapper>