<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xiaody.application.dao.CacheMapper">
	<insert id="create" parameterType="cache">
		insert into cache
		(cacheKey,storedValue)
		values
		(#{cache.cacheKey},#{cache.storedValue})
	</insert>

	<update id="update">
		update cache
		set cacheKey = #{cache.cacheKey},
		storedValue=#{cache.storedValue},
		updateTime=#{cache.updateTime}
		where id = #{id}
	</update>

	<delete id="delete">
		delete from cache where id = #{id}
	</delete>

	<select id="get" resultType="Cache">
		select *from cache where id = #{id}
	</select>

	<select id="getByKey" resultType="Cache">
		select *from cache where
		cacheKey = #{key}
	</select>
</mapper>