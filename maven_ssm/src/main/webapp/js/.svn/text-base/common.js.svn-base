  /*
   * 重定向工作区
   * url 工作区地址
   */
  function locationWork(url){
    top.document.getElementById("WORK").src=url;
  }
  
  /*
   * 更新标题,不同级别的标题会在不同级别展示
   * text 标题内容
   */
  function refTitle(text){
    var titleText = top.document.getElementById("TITLE").innerHTML;
    top.document.getElementById("TITLE").innerHTML = text; 
  }  
  
  /*
   * 弹出窗口
   * url 地址
   * width 宽
   * height 高
   */
  function pop(url,width,height){
    var propertyWindow=window.open(url,"pop","width="+width+",height="+height+",left="+(screen.availWidth-width)/2+",top="+(screen.availHeight-height-60)/2);  
  }  