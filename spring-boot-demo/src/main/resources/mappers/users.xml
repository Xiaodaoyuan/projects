<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xiaody.spring_boot_demo.dao.UsersMapper">
	<insert id="create" useGeneratedKeys="true" keyProperty="user.id"
		keyColumn="id">
		insert into users (name,password,email,admin)
		values
		(#{user.name},#{user.password},#{user.email},#{user.admin}})
	</insert>

	<update id="update">
		update users set
		name = #{user.name},
		password = #{user.password},
		email = #{user.email},
		admin = #{user.admin},
		where id = #{id}
	</update>

	<delete id="delete">
		delete from users where id = #{id}
	</delete>

	<select id="get" resultType="Users">
		select *from users where id =
		#{id}
	</select>

	<select id="checkNameLogin" resultType="Users">
		select *from users where
		name =#{name} and password=#{password}
	</select>

	<select id="searchByPage" resultType="Users">
		select *from account
	</select>
</mapper>